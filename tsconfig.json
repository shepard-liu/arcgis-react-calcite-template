{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES6"
        ],
        "sourceMap": true,
        "outDir": "./tsc_temp/",
        "noImplicitAny": true,
        // We need to extend ES6 classes
        "target": "es5",
        "jsx": "react",
        //"jsxFactory": "tsx",
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}